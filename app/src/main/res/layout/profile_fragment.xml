<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Provide Required Information to Complete Registration at SaksiGO"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_profileProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView_profileAccordingProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Profile According to your Profession"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView_profileProfession"
                app:layout_constraintTop_toBottomOf="@+id/textView_profileProfession" />

            <TextView
                android:id="@+id/textView_nationalIdProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="National ID (KTP)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView_profileAccordingProfession"
                app:layout_constraintTop_toBottomOf="@+id/textView_profileAccordingProfession" />

            <TextView
                android:id="@+id/textView_bankProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Bank Account"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView_nationalIdProfession"
                app:layout_constraintTop_toBottomOf="@+id/textView_nationalIdProfession" />

            <ImageView
                android:id="@+id/imageView_checkProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginLeft="280dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_profileProfession"
                app:layout_constraintStart_toEndOf="@+id/textView_profileProfession"
                app:srcCompat="@drawable/ic_baseline_check" />

            <ImageView
                android:id="@+id/imageView_checkProfileAccording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_profileAccordingProfession"
                app:layout_constraintStart_toEndOf="@+id/textView_profileAccordingProfession"
                app:srcCompat="@drawable/ic_baseline_check" />

            <ImageView
                android:id="@+id/imageView_checkNationalId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="203dp"
                android:layout_marginLeft="203dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_nationalIdProfession"
                app:layout_constraintStart_toEndOf="@+id/textView_nationalIdProfession"
                app:srcCompat="@drawable/ic_baseline_check" />

            <ImageView
                android:id="@+id/imageView_checkBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="228dp"
                android:layout_marginLeft="228dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_bankProfession"
                app:layout_constraintStart_toEndOf="@+id/textView_bankProfession"
                app:srcCompat="@drawable/ic_baseline_check" />

            <ProgressBar
                android:id="@+id/progressBar_professionRegistration"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <androidx.cardview.widget.CardView
                android:id="@+id/containerCompleteRegistration"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"

                app:cardCornerRadius="15dp"
                app:cardElevation="50dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_professionRegistration" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Account Completeness"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView_bankProfession"
                app:layout_constraintTop_toBottomOf="@+id/textView_bankProfession" />

            <TextView
                android:id="@+id/textView_percentProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:fontFamily="@font/roboto_bold"
                android:text="ttt"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintStart_toEndOf="@+id/textView17" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>